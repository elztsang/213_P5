<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="375dp"
        tools:src="@tools:sample/avatars" />

    <RadioGroup
        android:id="@+id/rg_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_small"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight=".33"
            android:text="Small" />

        <RadioButton
            android:id="@+id/rb_medium"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight=".33"
            android:text="Medium" />

        <RadioButton
            android:id="@+id/rb_large"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight=".33"
            android:text="Large" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Switch
            android:id="@+id/sw_byo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Build Your Own?" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pizzaOptions"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_addPizzaBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="Go Back" />

        <Button
            android:id="@+id/bt_addPizza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="Add Pizza" />
    </LinearLayout>
</LinearLayout>